<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Module Name -->
    <TextView
        android:id="@+id/moduleName"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="Module Name"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Cours Input Field -->
    <LinearLayout
        android:id="@+id/coursLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cours:"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/moduleCoursInput"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:inputType="numberDecimal"
            android:hint="Enter Cours Note" />
    </LinearLayout>

    <!-- TD Input Field -->
    <LinearLayout
        android:id="@+id/tdLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TD:"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/moduleTDInput"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:inputType="numberDecimal"
            android:hint="Enter TD Note" />
    </LinearLayout>

    <!-- TP Input Field -->
    <LinearLayout
        android:id="@+id/tpLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TP:"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/moduleTPInput"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:inputType="numberDecimal"
            android:hint="Enter TP Note" />
    </LinearLayout>
</LinearLayout>