<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="16dp">

    <ImageView
        android:layout_width="293dp"
        android:layout_height="193dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/loginsplashart" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/register_title"
        android:textColor="@color/text_primary_dark"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="start"
        android:layout_gravity="start"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="16dp"
        android:text="@string/please_register_to_login"
        android:textColor="@color/text_secondary_dark"
        android:textSize="14sp"
        android:gravity="start"
        android:layout_gravity="start"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_background_dark"
        android:orientation="horizontal"
        android:padding="6dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="6dp"
            android:src="@drawable/icon_person"
            app:tint="@color/text_primary_dark" />

        <EditText
            android:id="@+id/usernameEditText"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/username"
            android:paddingStart="6dp"
            android:textColor="@color/text_primary_dark"
            android:textColorHint="@color/text_primary_dark"
            android:textSize="14sp"
            tools:ignore="RtlSymmetry" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="@drawable/input_background_dark"
        android:orientation="horizontal"
        android:padding="6dp">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="6dp"
            android:src="@drawable/icon_lock"
            app:tint="@color/text_primary_dark" />

        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:paddingStart="6dp"
            android:textColor="@color/text_primary_dark"
            android:textColorHint="@color/text_primary_dark"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <Switch
            android:id="@+id/rememberMeSwitch"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="@string/remember_me_next_time"
            android:textColor="@color/text_secondary_dark"
            android:textSize="12sp"
            tools:ignore="UseSwitchCompatOrMaterialXml" />
    </LinearLayout>

    <Button
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/button_background_neon"
        android:text="@string/sign_up_button"
        android:textColor="@color/text_primary_dark"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/already_have_an_account"
            android:textColor="@color/text_secondary_dark"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/signinLink"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="3dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:minWidth="40dp"
            android:minHeight="40dp"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:text="@string/sign_in"
            android:textColor="@color/accent_neon_1"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>